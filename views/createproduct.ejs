<% include partials/head %> 
<script>
$(document).ready(function () {
  
$('#div_row').hide();
$('#div_row2').hide();
$('#btn_add').hide();


ShowProductfield();



$('#ddl_producttype').on('change', function() {
    ShowProductfield();
    cleardata();
});

function cleardata()
{
if ($('#ddl_producttype').val()=='wheel')
    {
        $('#ddl_brand').val('');
        $('#ddl_series').val('');
        $('#ddl_size').val('');
    }else if ($('#ddl_producttype').val()=='tire')
    {
       $('#ddl_brand').val('');
        $('#ddl_series').val('');
        $('#ddl_size').val('');
    } else if ($('#ddl_producttype').val()=='Accessories')
    {
       $('#ddl_brand').val('');
        $('#ddl_series').val('');
        $('#ddl_size').val('');
    } else{
       $('#ddl_brand').val('');
        $('#ddl_series').val('');
        $('#ddl_size').val('');

        
    }

}
function ShowProductfield()
{
    $('#btn_add').show();
    $('#div_row').show();
    $('#div_row2').show();

}

});
</script>
</head>
<body>

 <div id="wrapper">
<% include partials/nav %>  
       

        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">เพิ่มการรับประกันสินค้า

			
                        </h1> 

                    </div>
 <div class="col-lg-12">
