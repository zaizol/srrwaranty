<% include partials/head %> 
<script>
$(document).ready(function () {
  
$('#div_Tirerow').hide();
$('#div_Tirerow2').hide();
$('#div_Wheelrow1').hide();
$('#div_Wheelrow2').hide();
$('#div_Wheelrow3').hide();
$('#btn_add').hide();


ShowProductfield();



$('#ddl_producttype').on('change', function() {
    ShowProductfield();
    cleardata();
});

function cleardata()
{
if ($('#ddl_producttype').val()=='wheel')
    {
        $('#ddl_tirebrand').val('');
        $('#ddl_tireseries').val('');
        $('#ddl_tiresize').val('');
    }else if ($('#ddl_producttype').val()=='tire')
    {
        $('#ddl_wheelbrand').val('');
        $('#ddl_wheelseries').val('');
        $('#ddl_PCD').val('');
        $('#ddl_Offset').val('');
        $('#ddl_wheelsize').val('');
    } else if ($('#ddl_producttype').val()=='Accessories')
    {
        $('#ddl_tirebrand').val('');
        $('#ddl_tireseries').val('');
        $('#ddl_tiresize').val('');
        $('#ddl_wheelbrand').val('');
        $('#ddl_wheelseries').val('');
        $('#ddl_PCD').val('');
        $('#ddl_Offset').val('');
        $('#ddl_wheelsize').val('');
    } else{
        $('#ddl_tirebrand').val('');
        $('#ddl_tireseries').val('');
        $('#ddl_tiresize').val('');
        $('#ddl_wheelbrand').val('');
        $('#ddl_wheelseries').val('');
        $('#ddl_PCD').val('');
        $('#ddl_Offset').val('');
        $('#ddl_wheelsize').val('');

        
    }

}
function ShowProductfield()
{
    $('#btn_add').show();
    if ($('#ddl_producttype').val()=='wheel')
    {
        $('#div_Tirerow').hide();
        $('#div_Tirerow2').hide();
        $('#div_Wheelrow1').show();
        $('#div_Wheelrow2').show();
        $('#div_Wheelrow3').show();
    }else if ($('#ddl_producttype').val()=='tire')
    {
        $('#div_Tirerow').show();
        $('#div_Tirerow2').show();
        $('#div_Wheelrow1').hide();
        $('#div_Wheelrow2').hide();
        $('#div_Wheelrow3').hide();
    } else if ($('#ddl_producttype').val()=='Accessories')
    {
        $('#div_Tirerow').hide();
        $('#div_Tirerow2').hide();
        $('#div_Wheelrow1').hide();
        $('#div_Wheelrow2').hide();
        $('#div_Wheelrow3').hide();
    } else{
        $('#div_Tirerow').hide();
        $('#div_Tirerow2').hide();
        $('#div_Wheelrow1').hide();
        $('#div_Wheelrow2').hide();
        $('#div_Wheelrow3').hide();

         $('#btn_add').hide();
    }

}

});
</script>
