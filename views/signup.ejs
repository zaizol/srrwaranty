<style>
body{ background:#fff;}
</style>
  <body>
    <div class="col-sm-8 col-sm-offset-2">
      <div class="jumbotron text-center">
        <h1><span class="fa fa-sign-in"></span>จัดการผู้ใช้งาน</h1>

        <% if (message != null) { %>
          <div class="alert-danger"><%= message %></div>
        <% } %>

        <form action="/signup" method="post">

	<div class="form-group col-lg-6">
              <label class="control-label">Username</label>
              <input type="text" class="form-control" name="username"/>
          </div>

          <div class="form-group col-lg-6">
            <label class="control-label">Password</label>
            <input type="password" class="form-control" name="password" />
          </div>
            <div class="form-group col-lg-6">
              <label class="control-label">name</label>
              <input type="text" class="form-control" name="name"/>
          </div>
   <div class="form-group col-lg-6">
              <label class="control-label">surname</label>
              <input type="text" class="form-control" name="surname"/>
          </div>
	  <div class="form-group col-lg-6">
              <label class="control-label">Email</label>
              <input type="text" class="form-control" name="email"/>
          </div>
   <div class="form-group col-lg-6">
              <label class="control-label">Mobile</label>
              <input type="text" class="form-control" name="mobile"/>
   </div>
  
    
	  <div class="form-group col-lg-6">
              <label class="control-label">Role</label>
                    <select class="form-control" id="ddl_role" name="ddl_role">
						<option value="">-- Please Select --</option>
						<option value="1">พนักงาน</option>
            <option value="2">เจ้าหน้าที่โกดัง</option>
            <option value="3">เจ้าหน้าที่บัญชี</option>
            <option value="4">supplier</option>
            <option value="5">แอดมิน</option>
            <option value="6">Owner</option>
						</select>
    </div>

    <div class="form-group col-lg-6">
          <label class="control-label">Branch</label>
                    <select class="form-control" id="ddl_branch" name="ddl_branch">
						<option value="">-- Please Select --</option>
         <% for(var i=0; i<branch.length; i++) {%>
         <option value="<%=branch[i]._id%>"><%=branch[i].BranchInfo.name%></option>
         <% } %>
						</select>
    </div>
          <div class="row">
           
          </div>
            <div class="row">
          <div class="center">
            <input type="submit" class="btn btn-success" value="Submit" />
          </div>
       </div>
        </form>
      </div>
      <hr>
      <span class="fa fa-sign-in"> Already have an account?<a href="/"> Login</a></span>
    </div>
  </body>
</html>